<%- include ('../partials/header') %>


<%- include ('../partials/main_nav') %>



<!-- Main Content -->
<main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-6">
            <h1 class="display-4"><%= title %>s</h1>

            <% if(typeof displayName == 'string' && displayName) { %>
                <a href="/business-contact/add" class="btn " style="background-color: #939da8;" role="button">
                <i class="fas fa-plus-circle"></i> Add a Contact</a>
                <br>
            <% } %>
            <br>
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row-->
                <tr class="d-flex">
                    <% if(typeof displayName == 'string' && displayName) { %>
                        <th class="text-center col-4">Contact Name</th>
                        <th class="text-center col-7">Email</th>
                        <th class="text-center col-4">Number</th>
                        <th class="text-center col-3"></th>
                        <th class="text-center col-3"></th>
                    <% } else { %>
                        <th class="text-center col-4">Contact Name</th>
                        <th class="text-center col-7">Email</th>
                        <th class="text-center col-4">Number</th>
                        
                    <% } %>
                </tr>

                <!-- Repeatable Template Row -->

                <% for(let count = 0; count < ContactList.length; count++) { %>
                    <tr class="d-flex">
                        <% if(typeof displayName == 'string' && displayName) { %>
                            <td class="text-center col-4"><%= ContactList[count].name %></td>
                            <td class="text-center col-7"><%= ContactList[count].email %></td>
                            <td class="text-center col-4"><%= ContactList[count].number %></td>           
                            <td class="text-center col-3">
                                <a href="/business-contact/edit/<%= ContactList[count]._id %>" class="btn  btn-sm" style="background-color: #939da8;">
                                <i class="fas fa-pencil-alt"></i> Update</a>
                            </td>
                            <td class="text-center col-3">
                                <a href="/business-contact/delete/<%= ContactList[count]._id %>" class="btn  btn-sm" style="background-color: #939da8;">
                                <i class="fas fa-trash-alt"></i> Delete</a>
                            </td>
                         <% } else { %>
                            <td class="text-center col-4"><%= ContactList[count].name %></td>
                            <td class="text-center col-7"><%= ContactList[count].email %></td>
                            <td class="text-center col-4"><%= ContactList[count].number%></td> 
                         <% } %>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
  </main>
  






